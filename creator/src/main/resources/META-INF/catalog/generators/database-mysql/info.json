{
  "type": "generator",
  "name": "mySQL database",
  "description": "mySQL database service, with persistent storage.",
  "config": {
    "image": "mysql",
    "memoryLimit": "512Mi",
    "cpuLimit": "1",
    "livenessProbe": {
      "initialDelaySeconds": 30,
      "tcpSocket": {
        "port": 3306
      }
    },
    "readinessProbe": {
      "initialDelaySeconds": 5,
      "exec": {
        "command": [
          "/bin/sh",
          "-i",
          "-c",
          "MYSQL_PWD=\"$MYSQL_PASSWORD\" mysql -h 127.0.0.1 -u $MYSQL_USER -D $MYSQL_DATABASE -e \"SELECT 1\""
        ]
      }
    },
    "props.env": {
      "MYSQL_DATABASE": {
        "secret": "${secretName}",
        "key": "database"
      },
      "MYSQL_USER": {
        "secret": "${secretName}",
        "key": "user"
      },
      "MYSQL_PASSWORD": {
        "secret": "${secretName}",
        "key": "password"
      },
      "MYSQL_ROOT_PASSWORD": "verysecretrootpassword"
    },
    "extra.databaseInfo": {
      "image": "mysql",
      "service": "${secretName}"
    }
  }
}
